<%= form_with(model: @task, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter task name" %>
  </div>
  <div class="mb-3">
    <%= form.label :assigned_to, class: "form-label" %>
    <%= form.collection_select :assigned_to, User.all, :id, :name, { prompt: "Select user" }, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, Task::STATUS, {}, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= form.label :deadline, class: "form-label" %>
    <%= form.date_field :deadline, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="actions text-center">
    <%= link_to "Back", tasks_path, class: "btn btn-secondary" %>
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
