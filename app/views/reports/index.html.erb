<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<div class="container mt-4">
  <div class="row">
    <!-- Team Performance Chart Container -->
    <div class="col-md-6">
      <h2>Team Performance</h2>
      <canvas id="teamPerformanceChart" width="400" height="200"></canvas>
    </div>
    <!-- Task Performance Chart Container -->
    <div class="col-md-6">
      <h2>Task Performance</h2>
      <canvas id="taskPerformanceChart" width="800" height="400"></canvas>
    </div>
  </div>
  <div class="row">
  </div>
</div>
<script>
  document.addEventListener('turbolinks:load', function () {
    // Dummy data (replace with actual data)
    var taskPerformanceData = {
      labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
      datasets: [{
        label: 'Tasks Completed',
        data: [10, 15, 8, 12, 20],
        fill: false,
        borderColor: 'rgba(75, 192, 192, 1)',
        borderWidth: 2,
        pointBackgroundColor: 'rgba(75, 192, 192, 1)',
        pointRadius: 4
      }]
    };

    // Get the chart container
    var taskPerformanceCtx = document.getElementById('taskPerformanceChart').getContext('2d');

    // Create the chart
    var taskPerformanceChart = new Chart(taskPerformanceCtx, {
      type: 'line',
      data: taskPerformanceData,
      options: {
        scales: {
          x: {
            type: 'category',
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
          },
          y: {
            beginAtZero: true
          }
        }
      }
    });


    var teamPerformanceData = {
      labels: ['User 1', 'User 2', 'User 3'],
      datasets: [{
        label: 'Tasks Completed',
        data: [5, 8, 3],
        backgroundColor: [
          'rgba(75, 192, 192, 0.2)',
          'rgba(255, 99, 132, 0.2)',
          'rgba(255, 205, 86, 0.2)'
        ],
        borderColor: [
          'rgba(75, 192, 192, 1)',
          'rgba(255, 99, 132, 1)',
          'rgba(255, 205, 86, 1)'
        ],
        borderWidth: 1
      }]
    };

    // Get the chart container
    var ctx = document.getElementById('teamPerformanceChart').getContext('2d');

    // Create the chart
    var teamPerformanceChart = new Chart(ctx, {
      type: 'bar',
      data: teamPerformanceData,
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  });
</script>
